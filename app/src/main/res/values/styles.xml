<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Logo">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/medium_spacing</item>
    </style>

    <style name="EditTextName">
        <item name="android:gravity">center</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_marginBottom">@dimen/large_spacing</item>
    </style>

    <style name="Question">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:layout_marginBottom">@dimen/small_spacing</item>
    </style>

    <style name="Answers">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:background">@color/background</item>
        <item name="android:layout_marginBottom">@dimen/large_spacing</item>
    </style>

    <style name="EditTextAnswer">
        <item name="android:layout_marginBottom">@dimen/medium_spacing</item>
    </style>

    <style name="SubmitButton">
        <item name="android:background">@color/background</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/medium_spacing</item>
        <item name="android:layout_marginBottom">@dimen/large_spacing</item>
    </style>

</resources>
